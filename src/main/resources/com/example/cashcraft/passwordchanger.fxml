<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="300.0" prefWidth="600.0" styleClass="background-add" stylesheets="@transaction_bkg.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cashcraft.passwordController">
   <children>
      <VBox layoutX="162.0" layoutY="44.0" prefHeight="200.0" prefWidth="421.0" spacing="30.0">
         <children>
            <PasswordField fx:id="new_pass" stylesheets="@fields.css" />
            <PasswordField fx:id="confirm_pass" stylesheets="@fields.css" />
            <PasswordField fx:id="old_pass" stylesheets="@fields.css" />
         </children>
      </VBox>
      <VBox layoutX="14.0" layoutY="50.0" prefHeight="200.0" prefWidth="133.0" spacing="44.0">
         <children>
            <Label stylesheets="@fields.css" text="New password:">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <Label text="Confirm password:">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
            <Label text="Old password:">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <Button fx:id="confirm_pass_button" layoutX="228.0" layoutY="244.0" mnemonicParsing="false" onAction="#on_confirm_clicked" stylesheets="@buttons.css" text="Confirm change" />
   </children>
</AnchorPane>
